{
  "name": "@fafnirical/developing.ninja",
  "private": true,
  "workspaces": [
    "./sites/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "format": "concurrently npm:format:*",
    "format:eslint": "eslint --cache --cache-location node_modules/.cache/eslint --fix .",
    "format:prettier": "prettier --write .",
    "lint": "concurrently npm:lint:*",
    "lint:eslint": "eslint --cache --cache-location node_modules/.cache/eslint .",
    "lint:prettier": "prettier --check .",
    "lint:typescript": "concurrently \"tsc --noEmit\" \"npx --workspaces tsc --noEmit\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@schemastore/lintstagedrc.schema": "0.0.2",
    "@types/eslint": "^8.4.1",
    "@types/node": "^17.0.21",
    "@types/prettier": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@typescript-eslint/utils": "^5.14.0",
    "commitizen": "^4.2.4",
    "concurrently": "^7.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-packagejson": "^2.2.18",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": ">=14.15.0",
    "npm:": ">=7"
  }
}
