{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/remix/tsconfig.json"
  ],
  "compilerOptions": {
    "noEmit": true,

    "forceConsistentCasingInFileNames": true,

    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022"
  },
  "include": [
    "**/.*.js",
    "**/*.js",
    "**/.*.cjs",
    "**/*.cjs",
    "**/*.jsx",
    "**/.*.ts",
    "**/*.ts",
    "**/.*.cts",
    "**/*.cts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "./.cache", "./build"]
}
